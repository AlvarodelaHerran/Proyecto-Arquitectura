# ============================================
# CONFIGURACIÓN DEL SISTEMA CANCELADORA METRO
# Raspberry Pi 5 - Sistema con Autenticación
# ============================================

# ============================================
# CONFIGURACIÓN DE INFLUXDB
# ============================================
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_admin_token_here
INFLUXDB_ORG=metro_org
INFLUXDB_BUCKET=metro_system

# ============================================
# CONFIGURACIÓN DE FLASK
# ============================================
FLASK_ENV=production
FLASK_PORT=8000
FLASK_HOST=0.0.0.0
FLASK_DEBUG=False

# Clave secreta para sesiones (CAMBIAR EN PRODUCCIÓN)
# Genera una con: python3 -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=tu_clave_secreta_muy_segura_cambiar_en_produccion

# ============================================
# CONFIGURACIÓN DE HARDWARE - RASPBERRY PI 5
# ============================================

# --- SERVOS ---
PIN_SERVO_1=17
PIN_SERVO_2=27

# --- SENSORES LÁSER ---
PIN_LASER_A=22
PIN_LASER_B=23

# --- BOTÓN FÍSICO (reemplaza RFID) ---
PIN_BOTON=5

# --- LEDs DE ESTADO ---
PIN_LED_ROJO=13
PIN_LED_VERDE=19

# --- LCD I2C ---
LCD_ADDRESS=0x3f
LCD_PORT=1
LCD_COLS=16
LCD_ROWS=2

# ============================================
# CONFIGURACIÓN DE USUARIOS POR DEFECTO
# ============================================
# NOTA: Las contraseñas se hashean automáticamente en la aplicación
DEFAULT_ADMIN_USER=admin
DEFAULT_ADMIN_PASS=admin123
DEFAULT_ADMIN_NAME=Administrador

DEFAULT_USER1_USER=usuario1
DEFAULT_USER1_PASS=pass123
DEFAULT_USER1_NAME=Juan Pérez

DEFAULT_USER2_USER=usuario2
DEFAULT_USER2_PASS=pass123
DEFAULT_USER2_NAME=María García

# ============================================
# CONFIGURACIÓN DEL SISTEMA
# ============================================

# Tiempo de espera antes de cerrar puertas (segundos)
DOOR_CLOSE_DELAY=1

# Timeout de sesión (minutos)
SESSION_TIMEOUT=30

# Habilitar registro en InfluxDB (true/false)
ENABLE_INFLUXDB=true

# Nivel de logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ============================================
# CONFIGURACIÓN DE SEGURIDAD
# ============================================

# Número máximo de intentos de login fallidos
MAX_LOGIN_ATTEMPTS=5

# Tiempo de bloqueo tras exceder intentos (minutos)
LOCKOUT_DURATION=15

# Habilitar HTTPS (requiere certificados)
ENABLE_HTTPS=false

# Rutas de certificados SSL (si ENABLE_HTTPS=true)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# ============================================
# CONFIGURACIÓN AVANZADA
# ============================================

# Intervalo de actualización de estado (milisegundos)
UPDATE_INTERVAL=1000

# Habilitar modo debug de hardware (solo para desarrollo)
HARDWARE_DEBUG=false

# Simular hardware si no está disponible (para testing sin GPIO)
SIMULATE_HARDWARE=false

# ============================================
# NOTAS IMPORTANTES
# ============================================
# 1. Este archivo NO debe subirse a control de versiones (añadir a .gitignore)
# 2. CAMBIAR FLASK_SECRET_KEY en producción por una clave única y segura
# 3. CAMBIAR INFLUXDB_TOKEN por el token real generado en InfluxDB
# 4. Las contraseñas de usuarios se pueden cambiar desde el código o crear
#    un sistema de gestión de usuarios más avanzado
# 5. Verificar que los pines GPIO no estén en uso por otros procesos
# 6. La dirección I2C del LCD (0x3f) puede variar, verificar con: i2cdetect -y 1